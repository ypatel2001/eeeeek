{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "script/**", "use": "@vercel/static" },
    { "src": "style/**", "use": "@vercel/static" },
    { "src": "img/**", "use": "@vercel/static" },
    { "src": "song/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/script/(.*)", "dest": "/script/$1" },
    { "src": "/style/(.*)", "dest": "/style/$1" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/song/(.*)", "dest": "/song/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
